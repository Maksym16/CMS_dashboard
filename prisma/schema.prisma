// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id         String      @id @default(uuid())
  name       String
  userId     String
  billboards Billboard[] @relation("ProjectToBillboard")
  categories Category[]  @relation("ProjectToCategory")
  sizes      Size[]      @relation("ProjectToSize")
  colorss      Color[]      @relation("ProjectToColor")
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Billboard {
  id         String     @id @default(uuid())
  projectId  String
  project    Project    @relation("ProjectToBillboard", fields: [projectId], references: [id])
  label      String
  imageUrl   String
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([projectId])
}

model Category {
  id          String    @id @default(uuid())
  projectId   String
  project     Project   @relation("ProjectToCategory", fields: [projectId], references: [id])
  billboardId String
  billboard   Billboard @relation(fields: [billboardId], references: [id])
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([projectId])
  @@index([billboardId])
}

model Size {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation("ProjectToSize", fields: [projectId], references: [id])
  name      String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}

model Color {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation("ProjectToColor", fields: [projectId], references: [id])
  name      String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}
